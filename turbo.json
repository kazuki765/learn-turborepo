{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalDotEnv": [".env", ".env.local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },

    "deploy": {
      "dependsOn": ["^build", "^test", "^lint"]
    },

    "lint": {
      "dependsOn": ["^topo"]
    },

    "test": {
      "dependsOn": ["^topo"]
    },

    "//#format": {
      "dependsOn": []
    },
    
    "dev": {
      "cache": false,
      "persistent": true
    },

    "topo": {
      "dependsOn": ["^topo"]
    }
  }
}
